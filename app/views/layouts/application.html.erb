<!DOCTYPE html>
<html>
<head>
  <title>OwnAuth</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="nav_bar_margin nav_bar_text">
  <% if current_user %>
    Hello <%= current_user.username %>
    <%= button_to 'Edit profile', edit_user_path(current_user), method: 'get' %>
    <%= button_to 'Log out', logout_path, method: 'delete' %>
  <% else %>
    Welcome, please log in or register
  <%= button_to 'Register', signup_path, method: 'get' %>
  <%= button_to 'Register with Google', '/auth/google_oauth2', method: 'get' %>
  <%= button_to 'Log in', login_path, method: 'get' %>
  <% end %>
</header>
<%= yield %>

</body>
</html>
