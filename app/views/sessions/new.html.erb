<div class="container">
  <h2>Log in here:</h2>
  <%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email, params[:email] %><br>

  <%= label_tag :password %>
  <%= password_field_tag :password %><br>

  <%= label_tag :remember_me %>
  <%= check_box_tag :remember_me, 1, params[:remember_me] %><br>

  <%= submit_tag "Sign in" %>
  <%= link_to 'Forgoten password?', new_password_reset_path %>

  <% end %>

  <%= button_to "Back", root_path,  method: "get" %>

</div>