<div class="container">
  <h3><%= flash[:notice] %></h3>
  <h2>Log in here:</h2>
  <%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.submit "Sign in" %>

  <% end %>

  <%= button_to "Back", root_path,  method: "get" %>

</div>