<div class="container">
  <h3><%= flash[:notice] %></h3>
  <% if logged_in? %>
    <h1>All surveys taken by <%= user_full_name %></h1>
    <table>
      <tr>
        <th>Num</th>
        <th>Subject</th>
        <th>Question</th>
      </tr>
      <% @surveys.each_with_index do |s,i| %>
      <tr>
        <td><%= (i+1).to_s %></td>
        <td><%= s.subject %></td>
        <td><%= s.question %></td>
      </tr>
      <% end %>
    </table><br>
  <% else %>
    <h1>Please log in</h1>
  <% end %>
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
    <% @users.each do |u| %>
    <tr>
      <td><%= user_full_name(u) %></td>
      <td><%= u.email %></td>
    </tr>
    <% end %>
  </table>

</div>